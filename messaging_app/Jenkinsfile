pipeline {
    agent any

    // tools {
    //     python 'Python3'   // You may need to configure in Jenkins: Manage Jenkins â†’ Global Tool Configuration
    // }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Namisi-Aaron/alx-backend-python.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'pip install -r requirements.txt'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'pytest --junitxml=reports/test-results.xml'
            }
        }

        stage('Publish Test Report') {
            steps {
                junit 'reports/test-results.xml'
            }
        }
    }

    post {
        always {
            archiveArtifacts artifacts: 'reports/**/*.xml', fingerprint: true
        }
        failure {
            echo 'Build failed! Check logs.'
        }
        success {
            echo 'Build succeeded!'
        }
    }
}
